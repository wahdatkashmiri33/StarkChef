<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/cardlayout"
    android:layout_margin="20dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#ffde03"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/recipe_name"
            android:text="Name Of Recipe"
            android:textColor="@android:color/white"
            android:background="#bb86fc"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/servingslinearlayout"
            android:orientation="horizontal"
            android:layout_below="@id/recipe_name"

            android:layout_width="match_parent"
            android:layout_height="60dp">
        <TextView
            android:text="No Of Servings"
android:id="@+id/noserve"
            android:layout_below="@id/recipe_name"
            android:layout_margin="25dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="30dp" />

            <TextView
                android:id="@+id/servings"
                android:layout_margin="25dp"
               android:text="servings"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_below="@id/servingslinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="No Of Steps"
                android:id="@+id/nosteps"
                android:layout_below="@id/recipe_name"
                android:layout_margin="25dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="150dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/steps"
                android:layout_margin="25dp"
                android:text="steps"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
